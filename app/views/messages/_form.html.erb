<div id="message_form">
	<%= form_with(model: [@room, Message.new], local: false, class: "flex space-x-4") do |f| %>
		<%= f.text_field :content, 
			class: "flex-1 rounded-full border-gray-300 focus:border-teal-500 focus:ring focus:ring-teal-200 focus:ring-opacity-50 shadow-inner bg-white px-6 py-3",
			placeholder: "Type your message...",
			autocomplete: "off" %>
		<%= f.submit "Send", 
			class: "px-6 py-2 bg-teal-500 text-white font-medium rounded-full hover:bg-teal-600 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2 shadow-sm" %>
	<% end %>
</div>
